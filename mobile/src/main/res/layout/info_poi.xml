<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!--android:minHeight="210dp"-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POIName"
                            android:id="@+id/POIName"
                            android:textSize="25dp"
                            android:layout_marginRight="60dp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="POIAddr"
                            android:id="@+id/POIAddress"
                            android:layout_marginTop="15dp"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/layoutContents"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/activity_vertical_margin">
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_edit_black_36dp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:id="@+id/addNote"
                                android:clickable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/noteAdded"
                                android:layout_gravity="center"
                                android:text="@string/add_a_note"/>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:drawSelectorOnTop="true"
            android:layout_gravity="right|top"
            android:spinnerMode="dropdown"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

        </Spinner>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:id="@+id/fabAddStopInfoPoi"
            app:backgroundTint="@color/blue"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_margin="@dimen/fab_margin"
            />

    </FrameLayout>

        <!--android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"-->
        <!--android:layout_marginRight="@dimen/abc_button_padding_horizontal_material" -->


</FrameLayout>
