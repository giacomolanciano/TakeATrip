<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.takeatrip.Activities.SearchActivity"
    android:background="@color/screen_background_holo_light"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listUsers"
            android:layout_width="wrap_content"
            android:layout_height="375dp"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="bottom"
        android:background="@color/sfondoBase"
        android:paddingBottom="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextUserSearch"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:hint="@string/search_the_user"
                    android:textColorHint="@color/color_hint"
                    android:textSize="20sp"
                    android:layout_weight="0.9"
                    android:textColor="@color/black"
                    android:background="@color/sfondoBase"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/imageSearchUser"
                    android:src="@android:drawable/ic_search_category_default"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:layout_weight="0.1"
                    android:onClick="onClickSearchUser"/>

            </LinearLayout>


    </LinearLayout>

</FrameLayout>
