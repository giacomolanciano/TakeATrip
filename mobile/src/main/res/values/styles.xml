<resources>


    <!-- Base application theme. -->
    -

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:panelColorBackground">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>


        <!--  <item name="android:windowBackground">@color/blue</item> -->


        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>

    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>

    </style>

    <style name="search_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>

    </style>

    <style name="Theme.WithActionBar.Social" parent="android:Theme.WithActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColorPrimaryInverse">@color/blue</item>

    </style>

    <style name="Social" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>

    </style>

    <style name="Widget.AppTheme.ActionBar.Solid" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>
        <item name="android:textColorPrimaryInverse">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="android:actionBarTheme">@color/blue</item>
        <item name="android:actionBarWidgetTheme">@color/blue</item>
        <item name="android:actionBarTabStyle">@color/blue</item>
        <item name="android:actionBarItemBackground">@color/blue</item>
        <item name="android:panelColorBackground">@color/blue</item>
        <item name="android:solidColor">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <!--METTERE QUI COLORE BLUE DELLA BARRA SOPRA -->
    </style>


    <style name="ThemeSocial" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="Widget.AppTheme.ActionBar.Social" parent="Widget.AppCompat.ActionBar.Solid" />


    <style name="SocialDef" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>

    </style>

    <style name="TEMA" parent="Widget.AppCompat.ActionBar">
        <item name="colorPrimary">#90CAF9</item>
        <item name="android:colorBackground">@color/sfondoBianco</item>
        <item name="android:textColorPrimaryInverse">#90CAF9</item>
        <item name="android:solidColor">@color/blue</item>


    </style>

    <style name="CustomDialog" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>
