<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.takeatrip">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Creating Permission to receive Google Maps -->
    <permission
        android:name="com.arshad.map.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <provider
        android:name="com.facebook.FacebookContentProvider"
        android:authorities="com.facebook.app.FacebookContentProvider1024572710947061"
        android:exported="true" />

    <application
        android:name=".Classes.TakeATrip"
        android:allowBackup="true"
        android:icon="@drawable/logodef"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA1YAGqN4CRpchUly-R5MkllvnM99I872A" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.RegistrazioneActivity"
            android:label="@string/title_activity_registrazione" />
        <activity
            android:name=".Activities.ProfiloActivity"
            android:label="@string/title_activity_profilo" />
        <activity
            android:name=".Activities.ListaViaggiActivity"
            android:label="@string/title_activity_lista_viaggi" />
        <activity
            android:name=".Activities.CategoriaActivity"
            android:label="@string/title_activity_categoria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ViaggioActivity"
            android:label="@string/title_activity_viaggio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.DestinationSelectionActivity"
            android:label="@string/title_activity_destination_selection"
            android:parentActivityName=".Activities.ProfiloActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.david.takeatrip.Activities.ProfiloActivity" />
        </activity>
        <activity android:name=".Activities.PossibleDestinationActivity" />
        <activity android:name=".Activities.MapsActivity" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.InfoActivity" />
        <activity android:name=".Activities.StatsActivity" />
        <activity
            android:name=".Activities.ListaTappeActivity"
            android:label="@string/title_activity_lista_tappe2"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.SearchActivity" />
        <activity
            android:name=".Activities.SocialActivity"
            android:theme="@style/Widget.AppCompat.ActionBar.Solid" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".Activities.CreateFolderActivity" />
        <activity android:name=".Utilities.RetrieveImageTask" />
        <activity
            android:name=".Activities.MultiImageChooserActivity"
            android:label="@string/title_activity_multi_image_chooser"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.TappaActivity"
            android:label="@string/title_activity_tappa"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
