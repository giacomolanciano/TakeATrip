<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.takeatrip">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Creating Permission to receive Google Maps -->
    <permission
        android:name="com.arshad.map.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.takeatrip.Classes.TakeATrip"
        android:allowBackup="true"
        android:icon="@drawable/logodef"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1024572710947061"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA1YAGqN4CRpchUly-R5MkllvnM99I872A" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.takeatrip.Activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.takeatrip.Activities.RegistrazioneActivity"
            android:label="@string/title_activity_registrazione" />
        <activity
            android:name="com.takeatrip.Activities.ProfiloActivity"
            android:label="@string/title_activity_profilo"
            android:parentActivityName="com.takeatrip.Activities.MainActivity" />
        <activity
            android:name="com.takeatrip.Activities.ListaViaggiActivity"
            android:label="@string/title_activity_lista_viaggi"
            android:parentActivityName="com.takeatrip.Activities.MainActivity"/>
        <activity
            android:name="com.takeatrip.Activities.ViaggioActivity"
            android:label="@string/title_activity_viaggio"
            android:parentActivityName="com.takeatrip.Activities.MainActivity" />

        <activity
            android:name="com.takeatrip.Activities.ViaggioActivityConFragment"
            android:label="@string/title_activity_viaggio"
            android:parentActivityName="com.takeatrip.Activities.MainActivity" />

        <activity
            android:name="com.takeatrip.Activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.takeatrip.Activities.MapsActivity" />
        <activity
            android:name="com.takeatrip.Activities.MainActivity"
            android:launchMode="singleTop" />
        <!-- usato per tornare alla mainActivity senza perdere i dati -->

        <activity android:name="com.takeatrip.Activities.InfoActivity" />
        <activity android:name="com.takeatrip.Activities.StatsActivity" />
        <activity
            android:name="com.takeatrip.Activities.ListaTappeActivity"
            android:label="@string/title_activity_lista_tappe2"
            android:parentActivityName="com.takeatrip.Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.takeatrip.Activities.SearchActivity" />
        <activity
            android:name="com.takeatrip.Activities.SocialActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.takeatrip.Activities.TappaActivity"
            android:label="@string/title_activity_tappa"
            android:parentActivityName="com.takeatrip.Activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.takeatrip.Activities.VisualizzazioneFollowActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

        <activity
            android:name="com.takeatrip.Activities.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme" />
        <activity android:name="com.takeatrip.Activities.NuovoViaggioActivity" />
        <activity
            android:name="com.takeatrip.Activities.IntroActivity"
            android:label="@string/title_activity_tatintro"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>